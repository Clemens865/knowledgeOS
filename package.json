{
  "name": "knowledge-os",
  "productName": "KnowledgeOS",
  "version": "0.1.0",
  "description": "A revolutionary knowledge management platform combining VS Code, AI, and beautiful design",
  "main": "dist/main/main/index.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build:main && npm run build:renderer && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.config.js",
    "package": "electron-builder",
    "test": "jest",
    "lint": "eslint src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "knowledge-management",
    "electron",
    "monaco-editor",
    "ai",
    "markdown"
  ],
  "author": "KnowledgeOS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Clemens865/knowledgeOS"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "css-loader": "^7.1.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@extractus/article-extractor": "^8.0.20",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@monaco-editor/react": "^4.7.0",
    "@types/cheerio": "^0.22.35",
    "@types/d3": "^7.4.3",
    "@types/node-fetch": "^2.6.13",
    "@types/turndown": "^5.0.5",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "d3": "^7.9.0",
    "electron-store": "^10.1.0",
    "js-yaml": "^4.1.0",
    "monaco-editor": "^0.52.2",
    "node-fetch": "^3.3.2",
    "openai": "^5.19.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "turndown": "^7.2.1"
  },
  "build": {
    "appId": "com.knowledgeos.app",
    "productName": "KnowledgeOS",
    "directories": {
      "output": "dist-app",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "public/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "CFBundleName": "KnowledgeOS",
        "CFBundleDisplayName": "KnowledgeOS"
      }
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "assets/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
